<p id="notice"><%= notice %></p>

<h1>Characters</h1>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Race</th>
      <th>Jobclass</th>
      <th>Alignment</th>
      <th>Personality</th>
      <th>Mainquality</th>
      <th>Mainfault</th>
      <th>Haircolor</th>
      <th>Eyescolor</th>
      <th>Signs</th>
      <th>Past</th>
      <th>Dream</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.age %></td>
        <td><%= character.gender %></td>
        <td><%= character.race %></td>
        <td><%= character.jobclass %></td>
        <td><%= character.alignment %></td>
        <td><%= character.personality %></td>
        <td><%= character.mainquality %></td>
        <td><%= character.mainfault %></td>
        <td><%= character.haircolor %></td>
        <td><%= character.eyescolor %></td>
        <td><%= character.signs %></td>
        <td><%= character.past %></td>
        <td><%= character.dream %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

